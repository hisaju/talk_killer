<ul>
  <% summaries.each do |summary| %>
    <% unless summary.id.nil? %>
      <li>
        <p class="left"><%= summary.content %> @<%= summary.user.name %></p>
        <% if current_user.id == summary.user.id %>
          <p class="right">
            <%= link_to '', edit_talk_summary_path(talk, summary), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '', talk_summary_path(talk, summary), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>