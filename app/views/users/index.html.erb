<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
      <div class="container-child wrapper col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
        <%= link_to user_path(user) do %>
          <div class="container-child"><%= profile_img(user) %></div>
        <% end %>
      </div>
       <div>
         <div class="item col-md-4 col-sm-2">
           <%= link_to user.name, user %>
           </b>
           <%= user.email %>
         </div>
         <div class="item col-md-4 col-sm-1 ">
           <% if user.id != current_user.id %>
                 <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), 
                 class: 'btn btn-large btn-sm btn-success' ,method: 'post'%>
           <% else %>
              <p>あなたのアカウントです</p>
           <% end %>
         </div>
       </div>
       </br>
  <% end %>
</div>