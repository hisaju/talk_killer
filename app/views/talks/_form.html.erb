<%= form_for(@talk) do |f| %>
  <% if @talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@talk.errors.count, "error") %> prohibited this talk from being saved:</h2>

      <ul>
      <% @talk.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :話題 %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :内容 %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :状態 %><br>
    <%= f.select :status, Talk.statuses.keys.to_a, {}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :対応期限 %><br>
    <%= f.date_field :due_date %>
  </div>
  <div class="field">
    関係者<br>
    <%= f.select :templates, Talk.templates.keys.to_a, {}, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
