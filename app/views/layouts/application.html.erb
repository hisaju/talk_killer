<!DOCTYPE html>
<html>
<head>
  <title>talk_killer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target="#collapse-target">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="https://talk-killer-yuji911227.c9users.io" class="navbar-brand">talk_killer</a>
        </div>

        <div class="collapse navbar-collapse" id="collapse-target">
            <ul class="nav navbar-nav">
                <li><%= link_to 'Talks'  ,         talks_path %></li>
                <li><%= link_to 'Tasks'  ,         tasks_path %></li>
                <li><%= link_to 'Users'  ,         users_path %></li>
                <li><%= link_to 'Messages'  , conversations_path %></li>
                <% if user_signed_in? %>
                  <div class="btn-group">
                    <button class="btn btn-default" data-toggle="dropdown">
                        Setting<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                          <li><%= link_to 'アカウント情報変更', edit_user_registration_path %></li>
                          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
                    </ul>
                  </div>
                <% else %>
                  <li><%= link_to 'ログイン'  ,        new_user_session_path %></li>
                  <li><%= link_to 'サインアップ', new_user_registration_path %></li>
                <% end %>
            </ul>
            <button class="navbar-btn btn btn-default"><%= link_to 'New Talk', new_talk_path %></button>
        </div>
    </nav>
  </header>
  
  <%= yield %>
</body>
</html>
